---
import Layout from "@/layouts/Layout.astro";
import { AuthorsListView } from "@/components/authors/AuthorsListView";

// User is already verified by middleware
// Middleware redirects to /login if not authenticated
// User data is available via Astro.locals.user if needed

const title = "Autorzy - BookFlow";
// const description = "Zarządzaj swoją listą obserwowanych autorów w BookFlow";
---

<Layout title={title}>
  <main>
    <!-- 
      AuthorsListView is a React island that handles all interactivity.
      client:load ensures it loads immediately on page load.
    -->
    <AuthorsListView client:load />
  </main>
</Layout>

<style>
  main {
    width: 100%;
    min-height: 100vh;
  }
</style>
