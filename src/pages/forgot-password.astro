---
import Layout from "@/layouts/Layout.astro";
import { ForgotPasswordForm } from "@/components/auth/ForgotPasswordForm";

const title = "Odzyskiwanie hasła - BookFlow";
---

<Layout title={title} authMode={true}>
  <div class="min-h-screen flex items-center justify-center bg-background p-4">
    <div class="w-full max-w-md space-y-6">
      <div class="text-center space-y-2">
        <h1 class="text-3xl font-bold">Odzyskaj hasło</h1>
        <p class="text-muted-foreground">Wprowadź swój adres e-mail, a wyślemy Ci link do resetu hasła</p>
      </div>
      <div class="bg-card border rounded-lg p-6 shadow-sm">
        <ForgotPasswordForm client:load />
      </div>
    </div>
  </div>
</Layout>
